# Sonica Environment Configuration

# Application Settings
APP_NAME=Sonica API
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql://sonica:password@localhost:5432/sonica
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Audio Engine Configuration
AUDIO_ENGINE_URL=http://localhost:8080
AUDIO_ENGINE_TIMEOUT=30

# Vector Database Configuration (Pinecone)
VECTOR_DB_PROVIDER=pinecone
VECTOR_DB_API_KEY=your-pinecone-api-key
VECTOR_DB_ENVIRONMENT=us-west1-gcp
VECTOR_DB_INDEX_NAME=sonica-music
VECTOR_DB_DIMENSIONS=1024

# Recognition Settings
RECOGNITION_THRESHOLD=0.8
RECOGNITION_MAX_CANDIDATES=10
MAX_AUDIO_DURATION=30
MIN_AUDIO_DURATION=3
MAX_AUDIO_SIZE=10485760

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# External APIs
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
YOUTUBE_API_KEY=your-youtube-api-key

# Development Settings
DEVELOPMENT_MODE=true
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SWAGGER_UI=true

# Production Settings (uncomment for production)
# DEVELOPMENT_MODE=false
# ENABLE_DEBUG_TOOLBAR=false
# ENABLE_SWAGGER_UI=false
# LOG_LEVEL=WARNING
